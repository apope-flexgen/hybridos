{
    "inputs": {
        "v1": { "uri": "/example/v1", "type": "float" }
    },
    "outputs": {
        "duration1": {"name": "duration1", "uri": "/some/output", "flags":["clothed", "post", "sparse", "no_heartbeat"], "attributes": {"source": "Alerts", "severity": 2}},
        "duration2": {"name": "duration2", "uri": "/some/output", "flags":["clothed", "post", "sparse", "no_heartbeat"], "attributes": {"source": "Alerts", "severity": 2}}
	},
    "metrics": [
        {
            "id": "duration1",
            "type": "bool", 
            "outputs": "duration1",
            "expression": "Duration(v1 > 0, 5)",
            "alert": true
        },
        {
            "id": "duration2",
            "type": "bool", 
            "outputs": "duration2",
            "expression": "Duration(v1 > 3, 5)",
            "alert": true
        }
    ]
}
