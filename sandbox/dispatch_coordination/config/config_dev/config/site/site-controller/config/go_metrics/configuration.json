{
    "inputs": {
        "temp": { "uri": "/example/temp", "type": "float" },
        "high_temp_fault": { "uri": "/example/high_temp_fault", "type": "bool" }
    },
    "outputs": {
        "dd8b1ccc-6dd5-48d8-99bd-5bbfbeed73bf": { "uri": "/events/alerts", "flags":["clothed", "post", "sparse", "flat", "lonely", "no_heartbeat"], "attributes": {"source": "Alerts"}}
	},
    "metrics": [
        {
            "id": "dd8b1ccc-6dd5-48d8-99bd-5bbfbeed73bf",
            "type": "bool", 
            "outputs": "dd8b1ccc-6dd5-48d8-99bd-5bbfbeed73bf",
            "expression": "temp > 90 || high_temp_fault == true",
            "alert": true,
            "messages": [
                {"temp > 90": "Temperature: {temp} exceeded 90C"},
                {"high_temp_fault == true": "There was a high temperature fault"}
            ]
        }
    ]
}
