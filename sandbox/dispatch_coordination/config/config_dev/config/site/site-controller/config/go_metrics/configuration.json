{
    "inputs": {
        "v1": { "uri": "/example/v1", "type": "float" }
    },
    "outputs": {
        "example_duration": { "uri": "/some/output", "flags":["clothed", "post", "sparse", "no_heartbeat"] },
        "something": { "uri": "/some/output", "flags":["clothed", "post", "sparse", "no_heartbeat"] }
	},
    "metrics": [
        {
            "id": "example_duration",
            "type": "bool", 
            "outputs": "example_duration",
            "expression": "Duration(v1 > 0, 5)"
        },
        {
            "id": "something",
            "type": "bool", 
            "outputs": "something",
            "expression": "Duration(v1 > 3, 5)"
        }
    ]
}
