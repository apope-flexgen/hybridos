{
    "compilerOptions": {
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "types": ["jest", "styled-components", "node", "vite/client", "vite-plugin-svgr/client"],
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "src": [
                "./src/*"
            ],
            "shared/*": [
                "../shared/*"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "public",
        "*/**/*.spec.*"
    ],
    "include": [
        "src/**/*",
        "../shared",
        "vite.config.ts",
    ],
}
