{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": "../",
    "modulePaths": [
        "<rootDir>",
        "<rootDir>/src"
    ],
    "moduleNameMapper": {
        "shared/(.*)": [
            "/home/hybridos/web_apps/packages/hybridos/shared/$1"
        ]
    },
    "testEnvironment": "node",
    "testRegex": ".integration.spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [
        "<rootDir>/test/setups/setup.integration-tests.js"
    ]
}
