{  
    "/doc/catl_bms_1_init": {
        "note1":"This is the battery management system (BMS) initial config file for CATL",
        "note2":"Specifically, this file is responsible for loading manager and rack files to the system"
    },

    "/config/load": {
        "catl_bms_1_init": {
            "value":false,
            "file":"catl_bms_1_init",
            "pname":"ess_1",
            "aname":"bms",
            "new_options":[
                {
                    "tmpls":["catl_bms_manager", "catl_bms_manager_controls", "catl_bms_manager_faults", "catl_bms_manager_modbus_1", "catl_bms_manager_modbus_2"],
                    "pname":"ess_1",
                    "amname":"bms",
                    "from":1,
                    "to":1,
                    "reps":[
                        {"replace":"##BMS_ID##", "with":"bms_{:01d}"},
                        {"replace":"##ESS_ID##", "with":"ess_{:01d}"}
                    ]
                },
                {
                    "tmpls":["catl_bms_rack", "catl_bms_rack_faults", "catl_bms_rack_modbus"],
                    "pname":"bms",
                    "ainame":"##RACK_ID##",
                    "from":1,
                    "to":20,
                    "reps":[
                        {"replace":"##RACK_ID##",   "with":"sbmu_{:01d}"},
                        {"replace":"##RACK_NUM##",  "with":"{:01d}"}
                    ]
                }
            ]
        }
    }
}
