{
    "docinfo":{
            "name":"example_1.json",
            "author":"Phil Wilshire",
            "desc":"test the echo operation",
            "date":"08_10_2023"
    },

        "inputs": {
            "twins_pcs_on"      : {"uri": "/components/twins_pcs_1/on"            , "type": "bool"},
            "twins_pcs_standby" : {"uri": "/components/twins_pcs_1/standby"       , "type": "bool"},
            "start_stop_cmd"    : {"uri": "/components/pcs_1_info/start_stop_cmd" , "type": "int" }
        },
        "outputs": {
            "status"         : {"uri": "/components/pcs_1_info" },
            "ctrlword1": {"uri": "/components/twins_pcs_1", "flags": ["direct_set"]}
        },
        "metrics": [
            {
                "id": "status",
                "type": "int", 
                "outputs": ["status"],
                "expression": "If(twins_pcs_on, 3, If(twins_pcs_standby, 2, 1))"
            },
            {
                "id": "ctrlword1",
                "type": "int", 
                "outputs": ["ctrlword1"],
                "expression": "If(start_stop_cmd == 3, 2, 1)"
            }
        ],
        "echo": [
            {
                "uri": "/components/pcs_1_info",
                "publishRate": 1000,
                "heartbeat": "heartbeat",
                "inputs": [
                    {
                        "uri": "/components/twins_pcs_1",
                        "registers": {
                            "ac_contactor": "accontactor",
                            "active_power": "p",
                            "active_power_limit": "plim",
                            "active_power_ramp_rate_setpoint": "pramprise",
                            "active_power_ramp_rate_setpoint_cmd": "pramprise",
                            "active_power_setpoint_cmd": "pcmd",
                            "active_power_setpoint_feedback": "pcmd",
                            "apparent_power": "s",
                            "apparent_power_limit": "slim",
                            "dc_contactor": "dccontactor",
                            "dc_current": "idc",
                            "dc_power": "pdc",
                            "dc_voltage": "vdc",
                            "frequency": "f",
                            "frequency_setpoint_cmd": "fcmd",
                            "grid_following_cmd_feedback": "gridfollowingcmd",
                            "grid_forming": "gridforming",
                            "grid_forming_cmd_feedback": "gridformingcmd",
                            "grid_mode_cmd": "ctrlword2",
                            "heartbeat": "heart_heartbeat",
                            "l1_current": "iac",
                            "l1_l2_voltage": "vac",
                            "l2_current": "iac",
                            "l2_l3_voltage": "vac",
                            "l3_current": "iac",
                            "l3_l1_voltage": "vac",
                            "off_grid_frequency_setpoint_feedback": "fcmd",
                            "off_grid_power_factor_setpoint_feedback": "pfcmd",
                            "off_grid_voltage_setpoint_feedback": "vaccmd",
                            "power_factor": "pf",
                            "power_factor_setpoint_cmd": "pfcmd",
                            "reactive_power": "q",
                            "reactive_power_limit": "qlim",
                            "reactive_power_ramp_rate_setpoint": "qramprise",
                            "reactive_power_ramp_rate_setpoint_cmd": "qramprise",
                            "reactive_power_setpoint_cmd": "qcmd",
                            "reactive_power_setpoint_feedback": "qcmd",
                            "voltage_setpoint_cmd": "vaccmd"
                        }
                    }
                ]
            }
        ]

}
