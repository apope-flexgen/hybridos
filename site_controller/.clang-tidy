Checks: 'clang-diagnostic-*,clang-analyzer-*,readability-*,google-readability-*,-clang-analyzer-optin.performance.Padding,-clang-analyzer-core.UndefinedBinaryOperatorResult,-clang-diagnostic-unused-const-variable'
WarningsAsErrors: '*'
HeaderFilterRegex: '.*'
FormatStyle: file
ExtraArgs:
  - -Wall
  - -std=c++11
  - -Wpedantic 
  - -Werror 
  - -Wextra 
  - -D SPDLOG_COMPILED_LIB 
CheckOptions:
  - key:             google-readability-braces-around-statements.ShortStatementLines
    value:           '1'
  - key:             google-readability-function-size.StatementThreshold
    value:           '800'
  - key:             google-readability-namespace-comments.ShortNamespaceLines
    value:           '10'
  - key:             google-readability-namespace-comments.SpacesBeforeComments
    value:           '2'
 