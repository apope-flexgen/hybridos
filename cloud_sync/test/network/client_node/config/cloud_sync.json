{
    "clients": {
        "main" : {
            "directory" : "/home/archives",
            "private_key" : "/root/.ssh/id_rsa",
            "known_hosts" : "/root/.ssh/known_hosts",
            "extension" : ".tar.gz",
            "servers" : [ "destination", "local_consumer", "backup-buffer" ]
        },
        "backup-buffer" : {
            "directory" : "/home/backup-buffer",
            "private_key" : "/root/.ssh/id_rsa",
            "known_hosts" : "/root/.ssh/known_hosts",
            "extension" : ".tar.gz",
            "servers" : [ "backup" ],
            "tar_mode": {
                "mode": "tar",
                "interval_seconds": 288,
                "buffer_size": 10000
            }
        }
    },
    "servers": {
        "destination": {
            "ip" : "1.1.1.2",
            "port": "22",
            "user": "root",
            "directory" : "/home/archives",
            "timeout" : 2,
            "use_sftp": false
        },
        "local_consumer": {
            "directory" : "/home/local_consumer"
        },
        "backup-buffer": {
            "directory" : "/home/backup-buffer"
        },
        "backup": {
            "directory" : "/home/backup",
            "sorted" : true,
            "sorted_retention_days": 1
        }
    },
    "db_directory" : "/home/.cloud_sync/db",
    "retry_limit" : 1,
    "sleep_limit_seconds" : 4,
    "buffer_size" : 100000
}