{
    "clients": {
        "main" : {
            "directory" : "/home/archives",
            "private_key" : "/root/.ssh/id_rsa",
            "known_hosts" : "/root/.ssh/known_hosts",
            "extension" : ".metatargz",
            "tar_mode": {
                "mode": "tar",
                "interval_seconds": 1000000,
                "buffer_size": 5
            }
        }
    },
    "servers": {
        "destination": {
            "ip" : "1.1.1.3",
            "port": "22",
            "user": "root",
            "directory" : "/home/archives",
            "timeout" : 10
        }
    },
    "db_directory" : "/home/.cloud_sync/db",
    "retry_limit" : 1,
    "sleep_limit_seconds" : 1,
    "buffer_size" : 100000
}